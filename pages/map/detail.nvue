<template>
	<div class="wrap" @click="doClose">
		<div class="mb">
			<text class="bold">订单号:</text>
			<text>{{info.order_sn}}</text>
		</div>
		<div class="mb">
			<text class="bold">收货人:</text>
			<text>{{info.consignee}}</text>
		</div>
		<div class="mb">
			<text class="bold">地址:</text>
			<text>{{info.address}}</text>
		</div>
		<div class="mb">
			<text class="bold">配送信息:</text>
			<text>{{getGoodsDesc(info.item)}}</text>
		</div>
	</div>
</template>

<script>
export default {
	mounted() {
		uni.$on('info', info => {
			this.info = info
		})
	},
	data() {
		return {
			info: {}
		}
	},
	methods: {
		doClose() {
			uni.$emit('close')
		},
		getGoodsDesc(arr) {
			return arr.map(i => `${i.goods_title} * ${i.goods_num}`).join(',')
		}
	}
}
</script>

